{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "plugins/*": ["src/plugins/*"],
      "router/*": ["src/router/*"],
      "stores/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "views/*": ["src/views/*"]
    },
    "lib": ["es2015", "dom", "dom.iterable", "scripthost"],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "injectGlobal"]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts",
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "node_modules/vue-tsx-support/options/allow-unknown-props.d.ts"
  ]
}
